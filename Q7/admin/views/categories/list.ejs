<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>Category List</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="p-6 bg-gray-50">
    <h1 class="text-3xl font-bold mb-6">Category List</h1>

    <a href="/admin/categories/add" class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600">Add
        Category</a>

    <ul class="mt-6 space-y-3">
        <% categories.forEach(cat=> { %>
            <li class="bg-white p-4 rounded shadow flex justify-between items-center">
                <div>
                    <strong>
                        <%= cat.name %>
                    </strong>
                    <% if (cat.parent) { %>
                        <span class="text-sm text-gray-500">(Parent: <%= cat.parent.name %>)</span>
                        <% } %>
                </div>
                </a></p>
                <!-- <a href="/admin/categories/edit/<%= cat._id %>" class="text-blue-600 underline mr-3">Edit</a> -->
                <!-- Add delete button if needed -->

            </li>
            <% }) %>
    </ul>
    <p class="mt-6"><a href="http://localhost:3000/" class="text-blue-600 underline">Back
</body>

</html>