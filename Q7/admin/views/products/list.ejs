<!DOCTYPE html>
<html>

<head>
    <title>Product List</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="p-6">
    <h1 class="text-2xl font-bold mb-4">Product List</h1>
    <a href="/admin/products/add" class="bg-green-500 text-white px-4 py-2 rounded">Add Product</a>

    <a href="/admin/categories/add" class="bg-yellow-500 text-white px-4 py-2 rounded">Add Category</a>
    <div class="mt-6 grid grid-cols-1 md:grid-cols-2 gap-4">
        <% products.forEach(p=> { %>
            <div class="bg-white p-4 shadow rounded">
                <h2 class="text-lg font-bold">
                    <%= p.name %>
                </h2>
                <p>Price: â‚¹<%= p.price %>
                </p>
                <p>
                    <%= p.description %>
                </p>
                <p class="text-sm text-gray-600">Category: <%= p.category?.name || 'N/A' %>
                </p>
            </div>
            <% }) %>
    </div>
</body>

</html>